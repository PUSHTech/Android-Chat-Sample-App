<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/ListItemNoMargin"
    android:gravity="right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/bubble_outgoing"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:maxWidth="250dp"
        android:minWidth="100dp"
        android:paddingRight="14dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="17dp"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_chat_item_button"
                android:drawableLeft="@drawable/ic_add_contact"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxWidth="250dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:drawablePadding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX:XX"
            android:layout_alignRight="@id/layout_button"
            android:layout_alignBottom="@id/layout_button"
            android:layout_marginRight="13dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

</LinearLayout>