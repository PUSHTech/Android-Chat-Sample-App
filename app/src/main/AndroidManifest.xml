<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pushtech.pushchat.androidapplicationexample" >

    <!-- PERMISSION/FEATURES -->
    <!-- GCM -->
    <permission
        android:name="com.pushtech.pushchat.androidapplicationexample.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.pushtech.pushchat.androidapplicationexample.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Push" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.Push.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chat.registration.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>

        <service android:name=".chat.gcm.ExampleGCMIntentService" />

        <receiver android:name=".chat.gcm.ExampleGCMBroadcastReceiver" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.pushtech.pushchat" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".chat.providers.ExampleCampaignsProvider"
            android:authorities="@string/provider_campaigns_authority"
            android:exported="false" />
        <provider
            android:name=".chat.providers.ExampleChatsProvider"
            android:authorities="@string/provider_chats_authority"
            android:exported="false" />
        <provider
            android:name=".chat.providers.ExampleUsersProvider"
            android:authorities="@string/provider_users_authority"
            android:exported="false" />
        <activity
            android:name=".chat.contacts.ContactsActivity"
            android:label="@string/title_activity_contacts">
        </activity>
        <activity
            android:name=".chat.settings.SettingsActivity"
            android:label="@string/user_info" >
        </activity>
        <activity
            android:name=".chat.chatscreens.ChatListActivity"
            android:label="@string/title_chat_list" >
        </activity>
        <activity
            android:name=".chat.chatscreens.ChatDetailActivity"
            android:label="@string/title_chat_detail"
            android:parentActivityName=".chat.chatscreens.ChatListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pushtech.pushchat.androidapplicationexample.chat.chatscreens.ChatListActivity" />
        </activity>
    </application>

</manifest>
